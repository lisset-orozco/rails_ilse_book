<!DOCTYPE html>
<html>
  <head>
    <title>RailsIlseBook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class:"flash" + name) do %>
        <div><%= msg %></div>
      <% end %>
    <% end %>

    <% if admin_signed_in? %>
      <%= link_to 'Log out', destroy_admin_session_path %><br/><br/>
    <% else %>
      <%= link_to 'Log in', new_admin_session_path %><br/><br/>
    <% end %>
    <%= yield %>
  </body>
</html>
